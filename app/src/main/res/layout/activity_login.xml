<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:stackFromBottom="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"/>

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/login_et_username"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_edittext_login"
        android:hint="学号"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/login_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_edittext_login"
        android:hint="40网密码"
        android:inputType="textPassword"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <ImageView
                android:id="@+id/login_iv_codes_img"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"/>

        <EditText
            android:id="@+id/login_et_codes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/login_iv_codes_img"
            android:background="@drawable/bg_edittext_login"
            android:layout_marginRight="10dp"
            android:hint="验证码"
            android:singleLine="true"/>

        <Button
            android:id="@+id/refresh_codes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新验证码"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/input_button_style_with_corners"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/login_iv_codes_img"

           />
        </RelativeLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_button_style_with_corners"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="登录"
        android:textColor="#ffffff"/>


        <TextView
            android:id="@+id/help_text"
            android:text="帮助"
            android:textColor="#00aaee"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.wayww.edittextfirework.FireworkView
        android:id="@+id/fire_work3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>